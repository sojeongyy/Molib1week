<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 브랜드 로고 -->
        <ImageView
            android:id="@+id/brandLogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp" />

        <!-- 브랜드 이름 -->
        <TextView
            android:id="@+id/brandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:textColor="#FFFFFF" />

        <!-- 브랜드명 -->
        <TextView
            android:id="@+id/brandStringLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/brandString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 웹사이트 -->
        <TextView
            android:id="@+id/brandSiteLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Site"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/brandSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 주소 -->
        <TextView
            android:id="@+id/brandAddressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/brandAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#FFFFFF" />

        <!-- Spacer to push content up -->
        <View
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1" />
        <!-- Spacer to push content up -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 전화번호 강조 버튼 -->
        <Button
            android:id="@+id/brandPhoneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+82 02-3482-6565"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@null"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- 자동차 리스트 (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/carRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>

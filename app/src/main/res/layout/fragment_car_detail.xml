<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 자동차 이미지 -->
        <ImageView
            android:id="@+id/car_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:contentDescription="자동차 이미지"
            android:layout_marginBottom="24dp" />

        <!-- 자동차 이름 -->
        <TextView
            android:id="@+id/car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:text="911 Cabriolet"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- 브랜드 이름 -->
        <TextView
            android:id="@+id/car_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Porsche"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- 출시연도 -->
        <TextView
            android:id="@+id/car_launch_year_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="출시연도"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/car_launch_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://seoul.mclaren.co.kr"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 옵션 -->
        <TextView
            android:id="@+id/car_options_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="옵션"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/car_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+82 02-3482-6565"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 출력 -->
        <TextView
            android:id="@+id/car_horsepower_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="출력"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/car_horsepower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="720"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 연비 -->
        <TextView
            android:id="@+id/car_fuel_economy_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연료"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/car_fuel_economy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="720"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 가격 -->
        <TextView
            android:id="@+id/car_price_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/car_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+82 02-3482-6565"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
